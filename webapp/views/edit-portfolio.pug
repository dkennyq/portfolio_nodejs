doctype html
html
  head
    title Edit #{user.full_name} Portfolio
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN", crossorigin="anonymous")
    style.
        input.form-control, textarea.form-control {
          font-size: small;
          color: #212121;
        }
  body
    div.container
      h1.text-center Edit #{user ? user.full_name : 'User not found'}'s Portfolio
      form(action=`/edit-portfolio/${user.id_user_portfolio}`, method='POST')
        div.form-group
          label(for='full_name') Full Name
          input#full_name.form-control(type='text', value=user.full_name, name='full_name')
        div.form-group
          label(for='profile_image') Profile Image URL
          input#profile_image.form-control(type='text', value=user.profile_image, name='profile_image')
        div.form-group
          label(for='portfolio_description') Portfolio Description
          textarea#portfolio_description.form-control(name='portfolio_description')= user.portfolio_description
        div.form-group
          label(for='portfolio_summary') Portfolio Summary
          textarea#portfolio_summary.form-control(name='portfolio_summary')= user.portfolio_summary
        div.form-group
          label(for='user_email') Email
          input#user_email.form-control(type='email', value=user.user_email, name='user_email')
        div.form-group
          label(for='phone') Phone
          input#phone.form-control(type='tel', value=user.phone, name='phone')
        div.form-group
          label(for='x_user_name') X Profile
          input#x_user_name.form-control(type='text', value=user.x_user_name, name='x_user_name')
        div.form-group
          label(for='professional_summary') Professional Summary
          textarea#professional_summary.form-control(style='height: 150px', name='professional_summary')= user.professional_summary
        div.text-center.my-4
          button.btn.btn-primary(type='submit') Update Portfolio
          | 
          a.btn.btn-secondary(href=`/portfolio/${user.id_user_portfolio}`) Cancel
    script(src='https://code.jquery.com/jquery-3.7.1.min.js')
    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct", crossorigin="anonymous")