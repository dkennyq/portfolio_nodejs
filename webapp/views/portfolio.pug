doctype html
html
  head
    title #{user.full_name} Portfolio
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN", crossorigin="anonymous")
  body
    div.container
      // Home page
      .text-left.my-4 
        a(href='/') Home
      h1.text-center #{user ? user.full_name : 'User not found'}'s Portfolio
      img.rounded-circle.d-block.mx-auto.my-4(src=user.profile_image, alt='Profile Image', style='width: 300px; height: 300px;')
      p.text-center Experience: #{user.portfolio_description}
      h3 Contact Information:
      p.text-left Email: #{user.user_email}
      p.text-lef Phone: #{user.phone}
      p.text-lef 
       a(href=`https://twitter.com/${user.x_user_name}`, target='_blank') X Profile: #{user.x_user_name}
      h3 Profile Summary
      p.text_left  #{user.professional_summary}
      h3 #{user.full_name}'s X timeline
      ul.list-group
        each tweet in tweets
          li.list-group-item= tweet.text
      // Edit button
      div.text-center.my-4
          a.btn.btn-primary(href=`/edit-portfolio/${user.id_user_portfolio}`) Edit Portfolio
    script(src='https://code.jquery.com/jquery-3.7.1.min.js')
    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct", crossorigin="anonymous")
